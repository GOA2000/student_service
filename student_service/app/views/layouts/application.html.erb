<!DOCTYPE html>
<html>
<head>
  <title>StudentService</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <ul class="nav navbar-nav">
      <li class="active"><a href="/">Home</a></li>
      <% if current_user &&  admin? %>
        <li><%= link_to "Users", '/users' %></li>
        <li><%= link_to "Professors", '/professors' %></li>
        <li><%= link_to "Subjects", '/subjects' %></li>
        <li><%= link_to "About us", '/about-us' %></li>
        <li><%= link_to "Posts", '/posts' %></li>
      <% end %>
      <% if current_user %> 
        <li><a href='#'><%= current_user.email %></a></li> 
        <li><%= link_to "Log out", logout_path, method: "delete" %></li> 
        <li><%= link_to "My account", user_path(current_user) %></li>
      <% else %>  
        <li><%= link_to "Login", 'login' %></a></li> 
        <li><%= link_to "Register", 'register' %></a></li> 
    <% end %>
    </ul>
  </div>
</nav>
<% if flash[:error] %>
  <p class="bg-error"><%= flash[:error] %></p>
<% end %>
<% if flash[:notice] %>
  <p class="bg-warning"><%= flash[:notice] %></p>
<% end %>
<% if flash[:success] %>
  <p class="bg-success"><%= flash[:succes] %></p>
<% end %>

<%= yield %>

</body>
</html>
