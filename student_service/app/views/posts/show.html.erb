<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h1><%= @post.title %></h1>
			<p><%= @post.description %></p>
			<% if current_user && admin? %>
				<p><%= link_to "Edit", [:edit, @post] %></p>
			<%end%>
			<!-- POSTS COMMENTS-->
				<div id="comments">
					  <%= render 'comments/comments', comments: @post.comments %>
			  </div>
    		<%= render 'comment_form', post_id: @post.id %>
		</div>
	</div>
</div>