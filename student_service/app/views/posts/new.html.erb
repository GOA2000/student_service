<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1>New post:</h1>
      <%= form_for(@post, url: posts_path) do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>

          <%= f.submit 'Create post', class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
  </div>
</div>