 <div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h1>Welcome to the login page</h1>
		 
			<%= form_for(:session, url: login_path) do |f| %> 
			  <%= f.email_field :email, :placeholder => "Email" %> 
			  <%= f.password_field :password, :placeholder => "Password" %> 
			  <%= f.submit "Log in", class: "btn-submit" %>
			<% end %>
		</div>
	</div>
</div>